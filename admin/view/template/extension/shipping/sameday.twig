                            {% if services is empty  %}
                            <tr>
                                <td class="text-center" colspan="6">{{ text_services_empty }}</td>
                            </tr>
                            {% else  %}
                                {% for key, service in services %}
                                    <tr>
                                        <td>
                                            <a href="{{ service_links[key] }}"
                                               {% if service.column_ooh_label is not null %}
                                                    title="{{ service.column_ooh_label }}"
