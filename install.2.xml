    <file path="admin/controller/sale/order.php">
        <operation>
            <search><![CDATA[
                $data['tabs'] = array();
            ]]></search>
            <add position="after"><![CDATA[
                $data['shipping_method_sameday'] = $this->load->controller('extension/shipping/sameday/info', $order_info);
